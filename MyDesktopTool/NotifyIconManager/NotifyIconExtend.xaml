<Window x:Class="MyDesktopTool.NotifyIconManager.NotifyIconExtend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDesktopTool.NotifyIconManager"
        mc:Ignorable="d"
        Title="NotifyIconExtend"  Height="210" Width="150" Loaded="Window_Loaded" Closing="Window_Closing" MouseLeave="Window_MouseLeave" LostKeyboardFocus="Window_LostKeyboardFocus" WindowStyle="None" LostFocus="Window_LostFocus" ShowInTaskbar="False" LostMouseCapture="Window_LostMouseCapture">
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="ResizeMode" Value="CanResize" />
            <Setter Property="AllowsTransparency" Value="True" />
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="20" ResizeBorderThickness="1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>

    <Grid Style="{DynamicResource FromLv2BackGround}">
        <Grid>

        </Grid>
    </Grid>
</Window>
